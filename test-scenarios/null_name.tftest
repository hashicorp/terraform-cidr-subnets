
step "eval" {
  variables = {
    base_cidr_block = "10.0.0.0/8"
    networks = [
      {
        name     = null
        new_bits = 8
      },
      {
        name     = "bar"
        new_bits = 8
      },
      {
        name     = null
        new_bits = 8
      },
    ]
  }

  postcondition {
    condition = outputs.network_cidr_blocks == tomap({
      # the first network is skipped because its name is null, but it
      # still occupies address space.
      # The last network is also skipped, but it does not affect any
      # other addresses because there are no further networks after it.
      bar = "10.1.0.0/16"
    })
    error_message = format("wrong CIDR blocks %#v", outputs.network_cidr_blocks)
  }

  postcondition {
    condition = outputs.networks == tolist([
      {
        cidr_block = tostring(null)
        name       = tostring(null)
        new_bits   = 8
      },
      {
        cidr_block = "10.1.0.0/16"
        name       = "bar"
        new_bits   = 8
      },
      {
        cidr_block = tostring(null)
        name       = tostring(null)
        new_bits   = 8
      },
    ])
    error_message = format("wrong networks %#v", outputs.networks)
  }
}
